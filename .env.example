# Oracle Autonomous Database Configuration
# Copy this file to .env and fill in your actual values

# Database Credentials
DB_USERNAME=ADMIN
# DB_PASSWORD is NO LONGER USED in .env (Zero Trust Policy)
# It must be configured in OCI Vault and accessed via OCI_SECRET_OCID

# OCI Vault Configuration (Phase 3)
# The Secret OCID must start with 'ocid1.vaultsecret...'
OCI_SECRET_OCID=ocid1.vaultsecret.oc1.xxx...
OCI_INSTANCE_PRINCIPAL=false

# Database Connection
# Service names: freestackdb_high, freestackdb_medium, freestackdb_low
DB_SERVICE_NAME=freestackdb_high

# Wallet Location (absolute path recommended)
DB_WALLET_PATH=/path/to/your/project/quarkus-oci-freestack/src/main/resources/wallet
